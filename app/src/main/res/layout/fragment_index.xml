<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshlayout_index"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:srlAccentColor="@android:color/white"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlDrawableArrow="@drawable/arrow_down_icon"
        app:srlDrawableArrowSize="18dp"
        app:srlDrawableMarginRight="20dp"
        app:srlDrawableProgress="@drawable/loading_icon"
        app:srlDrawableProgressSize="20dp"
        app:srlDrawableSize="25dp"
        app:srlEnableLastTime="true"
        app:srlFinishDuration="500"
        app:srlPrimaryColor="@color/black"
        app:srlTextSizeTime="10dp"
        app:srlTextSizeTitle="15sp"
        app:srlTextTimeMarginTop="2dp" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedsv_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_main"
            >

            <include
                layout="@layout/fregment_index_top_merge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bg_white_top_circle_15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_index_incomedetails"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_earning_detail" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_earning_detail" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_index_kiting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_kiting_money" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_kiting_money" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_index_novice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_earn_tip" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_earn_tip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_index_myteam"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_my_team" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_my_team" />
                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/linear_index_kiting_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_kiting_detail" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_kiting_detail" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_index_shop_enter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_shop_enter" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_shop_enter" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_index_feedback"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_feedback" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_feedback" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_index_invite"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_invite_friends" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_invite_friends" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_index_shop"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/IndexMenuIconStyle"
                            android:src="@drawable/ico_shop" />
                        <TextView
                            style="@style/IndexMenuTextStyle"
                            android:text="@string/index_menu_shopping_mall" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>


